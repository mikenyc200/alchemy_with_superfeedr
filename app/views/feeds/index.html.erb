<p id="notice"><%= notice %></p>

<h1>Listing Feeds</h1>



<table>
  <thead>
    <tr>
      <th>Feed</th>
      <th>Entries count</th>
      <th>Concepts </th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td ><a href="<%= feed.url %>"><%= feed.title %></a></td>
        <td><%= link_to feed.entries.count , feed%></td>
        <td><%= link_to Concept.where(:entry_id => feed.entries.pluck(:id)).count , concepts_feed_path(feed) %></td>
        <td><%= link_to 'Retrieve', retrieve_feed_path(feed) %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

